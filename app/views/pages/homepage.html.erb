<section class="hero is-large is-info is-bold">
  <div class="hero-body">
    <div class="container">
			<h1 class="title is-1">
				<div><strong>Chat</strong></div> with others like you.
			</h1>
			<h2 class="subtitle is-3">
				Share in the journey and daily experiences of being a Daddy.
			</h2>
			<button class="button is-large is-info is-inverted is-rounded">
				Join the Convo
			</button>
    </div>
  </div>
</section>

<section class="section" id="benefits">
	<div class="columns is-vcentered">
		<div class="column">
			<figure class="image is-3by2">
				<%= img('newborn-cry.svg', 'crying newborn') %>
			</figure>
		</div>
		<div class="column">
			<h3 class="title is-3">
				Hear about others' experiences: the highs, lows, and everything in
				between
			</h3>
		</div>
	</div>

	<div class="columns is-vcentered reverse-columns">
		<div class="column">
			<figure class="image is-3by2">
        <%= img('newborn-sleep.svg', 'sleeping newborn') %>
			</figure>
		</div>
		<div class="column">
			<h3 class="title is-3">
				Get info and advice on topics like money, relationships, feeding,
				sleeping, and more
			</h3>
		</div>
	</div>

	<div class="columns is-vcentered">
		<div class="column">
			<figure class="image is-3by2">
				<%= img('newborn-smile.svg', 'happy newborn') %>
			</figure>
		</div>
		<div class="column">
			<h3 class="title is-3">
				Share your own experiences &mdash; your journey is a unique one, and we
				want to be a part of it
			</h3>
		</div>
	</div>
</section>

<section class="section" id="join">
	<div class="level">
	  <div class="level-item has-text-centered">
			<button class="button is-large is-info is-rounded">
				Join the Convo
			</button>
	  </div>
	</div>
</section>
