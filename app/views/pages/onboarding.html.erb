<div id="onboarding-container">
	<div class="progress mb-5" role="progressbar" aria-label="Onboarding Progress" aria-valuenow="4" aria-valuemin="0" aria-valuemax="100">
		<div class="progress-bar bg-success" style="width: 4%"></div>
  </div>

  <section class="fs-4">
		<div class="shadow-sm mb-3">
			<%= image_pack_tag "onboarding/welcome_to_the_app.png",
												 class: "d-block mx-lg-auto img-fluid",
												 loading: "lazy",
												 alt: "Welcome to The Daddy App" %>
		</div>
    <p>
		  We're excited you're here!
		</p>
    <p>
		  Share your experiences and get advice from
			other dads.
		</p>

		<div class="d-grid justify-content-md-end">
		  <%= link_to "Next", "#", role: "button", class: "btn btn-primary btn-lg text-uppercase onboarding-next-btn" %>
		</div>
	</section>

  <section class="fs-4 d-none">
	  <div class="shadow-sm mb-3">
	    <%= image_pack_tag "onboarding/chopping_it_up.png",
			                   class: "d-block mx-lg-auto img-fluid",
												 loading: "lazy",
												 alt: "Dads talking" %>
		</div>

    <p>
		  The <b>Home</b> page is where all the action is: talk about all the
			fatherhood ups, downs, and everything in between.
		</p>

		<div class="d-grid justify-content-md-end">
		  <%= link_to "Next", "#", role: "button", class: "btn btn-primary btn-lg text-uppercase onboarding-next-btn" %>
		</div>
	</section>

  <section class="fs-4 d-none">
	  <div class="shadow-sm mb-3">
				<%= image_pack_tag "onboarding/love_is_love.png",
											     class: "d-block mx-lg-auto img-fluid",
											     loading: "lazy",
											     alt: "Dads talking" %>
		</div>

    <p>
		  This is a safe, "good vibes only" space.
		</p>
		<p>
			<%= render "pages/community_guidelines/warning" %>
		</p>
		<p>Learn more on the <b>Community Guidelines</b> page.</p>
		<p>TLDR: be kind and respectful.</p>

		<div class="d-grid justify-content-md-end">
		  <%= link_to "I agree; next", "#", role: "button", class: "btn btn-primary btn-lg text-uppercase onboarding-next-btn" %>
		</div>
	</section>

  <section class="d-none" data-section-name="referrals">
	  <div class="shadow-sm mb-3">
	    <%= image_pack_tag "onboarding/network_effect.png",
			                   class: "d-block mx-lg-auto img-fluid",
												 loading: "lazy",
												 alt: "A community as strong as your referrals" %>
		</div>

    <p class="fs-4">
		  At its core, this app is only as strong and, well, useful as the dads we
			know and invite to chop it up.
		</p>
    <p class="fs-4">
			Refer a few dads now:
		</p>

		<%= form_with scope: :invite, url: onboarding_invites_path, local: false do |form| %>
			<div class="bg-light p-3 mb-3">
				<% 3.times do |index| %>
					<div class="form-floating mb-3">
						<%= form.text_field :email,
																class: "form-control",
																id: "floatingEmail",
																placeholder: "Email",
																name: "invite[emails][#{index}]",
																required: false %>
						<%= form.label :email, "Email ##{index + 1}", for: "floatingInput" %>
					</div>
				<% end %>
			</div>

			<div class="d-grid gap-2 d-md-flex justify-content-md-end">
				<%= form.submit "Send Invites", class: "btn btn-primary btn-lg text-uppercase" %>
				<%= link_to "Skip", "#", role: "button", class: "btn btn-outline-primary btn-lg me-md-2 text-uppercase onboarding-next-btn" %>
			</div>
		<% end %>
	</section>

  <section class="fs-4 d-none">
		<div class="shadow-sm mb-3">
			<%= image_pack_tag "onboarding/rewards.png",
													class: "d-block mx-lg-auto img-fluid",
													loading: "lazy",
													alt: "Welcome to The Daddy App" %>
		</div>

    <p>
		  Check out the <b>Rewards</b> page for details on how to potentially
		  win a little something-something every month.
		</p>
    <p>
			To be eligible, join some conversations and/or refer other dads.
		</p>

		<div class="d-grid justify-content-md-end">
		  <%= link_to "Next", "#", role: "button", class: "btn btn-primary btn-lg text-uppercase onboarding-next-btn" %>
		</div>
	</section>

  <section class="d-none">
		<div class="shadow-sm mb-3">
				<%= image_pack_tag "onboarding/say_hello.png",
													 class: "d-block mx-lg-auto img-fluid",
													 loading: "lazy",
													 alt: "Welcome to The Daddy App" %>
		</div>
    <p class="fs-4">
      You: Take us to the app already!
			<br>
			Us: ðŸ˜… Okaaay. Before we do, introduce yourself:
		</p>

		<%= form_with model: @comment, url: onboarding_comments_path, local: true do |form| %>
			<div class="bg-light p-3 mb-3">
				<div class="form-floating mb-3">
					<%= form.text_field :body,
															class: "form-control",
															id: "floatingEmail",
															placeholder: "Comment",
															required: false %>
					<%= form.label :comment,
					               "e.g. What's up everybody, my name is ___ and I'm from ___...",
												 for: "floatingInput" %>
				</div>
			</div>

		<div class="d-grid gap-2 d-md-flex justify-content-md-end">
			<%= form.submit "Share first post!", class: "btn btn-primary btn-lg text-uppercase" %>
			<%= link_to "Later", signed_in_root_path, role: "button", class: "btn btn-outline-primary btn-lg me-md-2 text-uppercase" %>
		</div>

		<% end %>
	</section>
</div>
