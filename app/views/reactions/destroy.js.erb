var reactionableID = "<%= @comment.id %>";
var $reactionable = $(".comments").find(`[data-comment-id='${reactionableID}']`);
var $removeReactionLink = $reactionable.find(".remove-reaction-link").first();

$removeReactionLink.replaceWith(reactToCommentLink());

// Replace with partial to DRY this up from links in _link_actions.html.erb
function reactToCommentLink() {
  return $("<a/>")
    .addClass("card-link text-decoration-none react-to-comment-link")
    .attr("href", "/reactions?comment_id=" + reactionableID)
    .attr("data-method", "post")
    .attr("data-remote", "true")
    .attr("rel", "nofollow")
    .text("üëç Like (" + "<%= @comment.likes.count %>" + ")");
}