var reactionableID = "<%= @reactionable.id %>";
var $reactionable = $(".reactionable-wrapper").find(`[data-reactionable-id='${reactionableID}']`);
var $removeReactionForm = $reactionable.find(".remove-reaction-link").first().parent();
var addReactionFormPartial = "<%= j render(partial: "reactions/add_reaction_link", locals: {cta: @cta, reactionable: @reactionable, emoji: @emoji.emoji, text: "#{@emoji.emoji} Upvote", reaction_count: @reaction_count, reaction_count_method_name: @reaction_count_method_name}) %>";

$removeReactionForm.replaceWith(addReactionFormPartial);
