<section id="registration-babies" class="d-none">
  <h3 class="mb-4 bg-light bg-gradient py-3">👶🏾 Step 2/2: Add your <span>baby</span></h3>

  <div class="registration-added-babies">
    <%= render "baby_fields" %>
  </div>

  <div class="mb-5 add-another-baby-link-container">
    <%= link_to "➕ Add another baby", "#", class: "registration-baby-add-link" %>
  </div>

  <div class="mb-2">
    <%= form.submit "Let's go!", role: "button", class: "w-100 btn btn-primary btn-lg text-uppercase" %>
  </div>
  <div>
    <%= link_to "Back", "#", role: "button", id: "registration-baby-back", class: "btn btn-outline-primary btn-lg w-100 text-uppercase" %>
  </div>
</section>
