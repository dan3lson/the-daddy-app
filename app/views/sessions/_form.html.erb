<%= form_for :session, url: session_path do |form| %>
  <div class="form-floating mb-3">
    <%= form.text_field :email, class: "form-control", id: "floatingEmail", placeholder: "Email", required: true %>
    <%= form.label :email, "Email", for: "floatingInput" %>
  </div>
  <div class="form-floating mb-3">
    <%= form.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "s0M3P@sswOrd!", required: true %>
    <%= form.label :password, "Password", for: "floatingInput" %>
  </div>

  <div>
    <%= form.submit "Sign in", class: "w-100 btn btn-primary btn-lg text-uppercase" %>

    <% if Clearance.configuration.allow_sign_up? %>
      <hr>

      <%= link_to "Create New Account",
                  sign_up_path,
                  role: "button",
                  class: "btn btn-success btn-lg w-100 text-uppercase" %>
    <% end %>
  </div>
<% end %>
