<!DOCTYPE html>
<html>
  <%= render 'layouts/head' %>
  <body>
    <div class="container">
      <%= render 'layouts/navbar' %>

      <% unless flash.empty? %>
        <div class="notification">
          <% flash.each do |key, value| %>
            <div class="flash <%= key %>"><%= value %></div>
          <% end %>
        </div>
      <% end %>
    </div>

    <%= yield %>

    <%= render 'layouts/footer' %>
  </body>
</html>
