var parentRootID = "<%= @parent_comment.id %>";
var saved = "<%= @saved %>" === "true";
var $parentRootComment = $("section.comments").find(`[data-root-id='${parentRootID}']`);
var $parentRootCommentBox = $parentRootComment.parent();
var $field = $parentRootCommentBox.find(".field");
var $input = $field.find(".input");
var $help = $parentRootCommentBox.find(".help");
$input.removeClass("is-danger").removeClass("is-success");
$help.remove();

if (saved) {
    var $helpSuccess = $('<p/>', { "class": "help is-success" });
    $helpSuccess.text("Thanks for your comment");
    $helpSuccess.insertAfter($field);
    $input.val("");
} else {
    var errors = "<%= @errors %>";
    var $helpDanger = $('<p/>', { "class": "help is-danger" });
    $input.addClass("is-danger");
    $helpDanger.text('Please fix the following errors: ' + errors);
    $helpDanger.insertAfter($field);
}