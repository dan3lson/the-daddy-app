<%= form_with scope: :users_question_of_the_day,
              url: answer_question_of_the_day_path,
              local: true do |form| %>
  <%= render "shared/form_errors", object: comment %>

  <div class="mb-2">
    <%= form.text_area :body, class: "form-control form-control-lg" %>
  </div>

  <%= form.submit "Share", class: "btn btn-outline-light btn-lg text-uppercase w-100" %>
<% end %>
