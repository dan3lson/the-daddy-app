

<div class="card mb-4" data-comment-id="<%= comment.id %>">
  <div class="card-body">
    <h5 class="card-title">
      <%= comment.user.first_name %>
    </h5>
    <h6 class="card-subtitle mb-2 text-muted mb-3">
      👶 <%= baby_names(comment.user) %>
      <br>
      ⏱ <%= render "comments/meta", comment: comment %>
    </h6>
    <p class="card-text fs-4">
      <% if comment.image.attached? %>
        <p>
          <%= image_tag comment.image.variant(resize_to_limit: [200, 200]),
                        title: comment.image.filename.to_s
              %>
        </p>
      <% end %>

      <%= comment.body %>
    </p>

    <a href="#" class="card-link text-decoration-none">👍 Like</a>
    <% if comment.replies? %>
      <%= link_to "👀 Comments (#{comment.replies.size})",
                  comment_replies_path(comment),
                  class: "card-link text-decoration-none comment-href", remote: true %>
    <% end %>
    <a href="#" class="card-link text-decoration-none">🚨 Report</a>
  </div>
  <div class="card-footer">
    <%= render "comments/reply_form", comment: comment %>
  </div>
</div>

